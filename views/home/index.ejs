                <img src="/uploads/banner/banner_shape04.png" alt="" class="tg-motion-effects5">
            </div>
        </section>
        <!-- banner-area-end -->

        <!-- features-area -->
        <section class="features-area pt-130 pb-70">
            <div class="container">
                <div class="row">
                    <% news_products.forEach(function(np) { %>
                        <div class="col-lg-6">
                            <div class="features-item tg-motion-effects">
                                <div class="features-content">
                                    <span>
                                        <%= np.cat ? np.cat.name : 'No category' %>
                                    </span>

                                    <h4 class="title"><a href="/product/<%= np.id %>">
                                            <%= np.name %>
                                        </a></h4>
                                    <% if (userAuthenticated) { %>
                                        <p style="font-size: 20px;" class="a">
                                            <%= np.content %> <br>
                                                <% if (np.favorited) { %>
                                                    <a title="Bỏ thích"
                                                        onclick="return confirm('bạn có muốn bỏ thích không')"
                                                        href="/favorites/<%= np.id %>"><i class="fas fa-heart"></i></a>
                                                    <% } else { %>
                                                        <a title="Yêu thích" href="/favorites/<%= np.id %>"><i
                                                                class="far fa-heart"></i></a>
                                                        <% } %>
                                                            <a title="Thêm vào giỏ hàng"
                                                                href="/cart/add/<%= np.id %>"><i
                                                                    class="fa fa-shopping-cart"></i></a>
                                                            <% } else { %>
                                                                <a title="Thêm vào giỏ hàng" href="/login"
                                                                    onclick="alert('Vui lòng đăng nhập để thêm giỏ hàng')"><i
                                                                        class="fa fa-shopping-cart"></i></a>
                                                                <% } %>
                                                                    <br>
                                                                    <% if (np.sale_price> 0) { %>
                                                                        <span><s>$<%= np.price %></s></span>
                                                                        <span class="price">$<%= np.sale_price %></span>
                                                                        <% } else { %>
                                                                            <span class="price">$<%= np.price %></span>
                                                                            <% } %>
                                </div>
                                <div class="features-img">
                                    <img src="/uploads/<%= np.image %>" alt="">
                                    <div class="features-shape">
                                        <!-- <img src="/uploads/images/features_shape.png" alt="" class="tg-motion-effects4"> -->
                                    </div>
                                </div>
                                <div class="features-overlay-shape"
                                    style="background-image: url('/uploads/images/features_overlay.png');"></div>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
        </section>
        <!-- features-area-end -->

    </div>
    <!-- area-bg-end -->

    <!-- product-area -->
