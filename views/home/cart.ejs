<%- include('../master_user/header.ejs') %>
    <div class="area-bg" style="background-image: url('');">
        <section class="breadcrumb-area tg-motion-effects breadcrumb-bg"
            data-background="/uploads/bg/breadcrumb_bg.jpg" style="background-size: cover; background-position: center;margin-top: -150px;">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb-content" style="margin-top:-7500px;">
                            <h2 class="title">Giỏ hàng</h2>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Giỏ hàng</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- breadcrumb-area-end -->

        <!-- contact-area -->
        <section class="contact-area">
            <div class="contact-info-wrap contact-info-bg" data-background="/assets/img/bg/contact_info_bg.jpg"></div>
            <div class="contact-wrap">
                <div class="container" style="margin-top: -300px;">
                    <% if (carts.length===0) { %>
                        <div class="alert alert-warning text-center">
                            Giỏ hàng của bạn đang trống. Hãy thêm sản phẩm vào giỏ hàng.
                        </div>
                        <% } else { %>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Giá sản phẩm</th>
                                        <th>Ảnh sản phẩm</th>
                                        <th>Số lượng</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% carts.forEach((item, index)=> { %>
                                        <tr>
                                            <td>
                                                <%= index + 1 %>
                                            </td>
                                            <td>
                                                <%= item.name || 'Tên không xác định' %>
                                            </td>
                                            <td>
                                                <% if (item.sale_price && item.sale_price < item.product_price) { %>
                                                    <span style="text-decoration: line-through; color: red;">
                                                        <%= item.product_price %> VND
                                                    </span>
                                                    <span style="color: green;">
                                                        <%= item.sale_price %> VND
                                                    </span>
                                                    <% } else { %>
                                                        <%= item.product_price || item.cart_price %> VND
                                                            <% } %>
                                            </td>
                                            <td>
                                                <% if (item.image) { %>
                                                    <img src="/uploads/<%= item.image %>" width="50px"
                                                        alt="Hình ảnh sản phẩm">
                                                    <% } else { %>
                                                        <img src="/assets/img/default-product.jpg" width="50px"
                                                            alt="Hình ảnh sản phẩm">
                                                        <% } %>
                                            </td>
                                            <td>
                                                <form action="/cart/update/<%= item.product_id %>" method="POST">
                                                    <input type="number" name="quantity" value="<%= item.quantity %>"
                                                        min="1">
                                                    <button type="submit">Cập nhật</button>
                                                </form>
                                            </td>
                                            <td>
                                                <a href="/cart/delete/<%= item.product_id %>"
                                                    onclick="return confirm('Bạn có muốn xóa sản phẩm này không?');"
                                                    class="btn btn-danger">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>

                            <br>
                            <div class="text-center">
                                <a href="/" class="btn btn-primary">Tiếp tục mua</a>
                                <form action="/cart/clear" method="POST" style="display: inline;">
                                    <button type="submit"
                                        onclick="return confirm('Bạn có muốn xóa toàn bộ giỏ hàng không?')"
                                        class="btn btn-danger">Xóa giỏ hàng</button>
                                </form>
                                <a href="/order/checkout" class="btn btn-success">Đặt hàng</a>
                            </div>
                            <% } %>
                </div>
            </div>
        </section>
        <%- include('../master_user/footer.ejs') %>
    </div>