        <section class="breadcrumb-area tg-motion-effects breadcrumb-bg"
            data-background="/uploads/bg/breadcrumb_bg.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb-content">
                            <h2 class="title">Favorites</h2>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">favorites</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- breadcrumb-area-end -->

        <!-- contact-area -->
        <section class="contact-area">
            <div class="container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá sản phẩm</th>
                            <th>Ảnh sản phẩm</th>
                            <th>Ngày yêu thích</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (favorites.length> 0) { %>
                            <% favorites.forEach((item, index)=> { %>
                                <tr>
                                    <td>
                                        <%= index + 1 %>
                                    </td>
                                    <td>
                                        <%= item.name %>
                                    </td>
                                    <td>
                                        <%= item.price %> / <%= item.sale_price %>
                                    </td>
                                    <td>
                                        <img src="/uploads/<%= item.image %>" width="100px" alt="">
                                    </td>
                                    <td>
                                        <%= new Date(item.created_at).toLocaleDateString('vi-VN') %>
                                    </td>
                                    <td>
                                        <% if (item.favorited) { %>
                                            <a title="Bỏ thích" onclick="return confirm('bạn có muốn bỏ thích không')"
                                                href="/favorites/<%= item.id %>">
                                                <i class="fas fa-heart"></i>
                                            </a>
                                            <% } else { %>
                                                <a title="Yêu thích" href="/favorites/<%= item.id %>">
                                                    <i class="far fa-heart"></i>
                                                </a>
                                                <% } %>
                                    </td>
                                </tr>
                                <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="6">Không có sản phẩm yêu thích nào.</td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </section>
